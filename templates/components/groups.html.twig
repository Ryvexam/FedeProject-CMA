{% macro group_selector(form_groups, selected_groups) %}
<div class="space-y-3">
    {# Header #}
    <div class="flex items-center">
        <svg class="h-5 w-5 text-green-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
        <span class="text-sm font-medium text-gray-700">Groups</span>
    </div>

    {# Display selected groups as tags #}
    <div class="flex flex-wrap gap-2">
        {% for group in selected_groups %}
            <div class="bg-green-50 text-green-600 text-sm px-3 py-1 rounded-full border border-green-200">
                {{ group.name }}
            </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        {{ form_widget(form_groups, {
        'attr': {
        'class': 'hidden'
        }
        }) }}
    </div>
</div>
{% endmacro %}