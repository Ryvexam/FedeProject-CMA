{# components/form_field.html.twig #}
{% macro input(form_widget, label, type = 'text') %}
    <div>
        {{ form_label(form_widget, label, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        {{ form_widget(form_widget, {
            'attr': {
                'class': 'block w-full rounded-lg border-2 border-red-200 py-3 focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-300',
                'type': type
            }
        }) }}
        {{ form_errors(form_widget) }}
    </div>
{% endmacro %}