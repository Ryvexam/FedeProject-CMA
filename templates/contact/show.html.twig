{% extends 'base.html.twig' %}

{% block title %}{{ contact.firstName }} {{ contact.lastName }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in-up {
            animation: fadeInUp 0.3s ease forwards;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-green-50">
        <!-- Header with subtle gradient -->
        <header class="bg-gradient-to-r from-green-600 to-green-700 text-white">
            <div class="max-w-7xl mx-auto px-4 py-6 flex items-center justify-between">
                <h1 class="text-2xl font-medium">{{ contact.firstName }} {{ contact.lastName }}</h1>
                <div class="flex items-center gap-4">
                    <a href="{{ path('app_contact_index') }}"
                       class="inline-flex items-center px-4 py-2 bg-white text-green-700 rounded-lg
                              font-medium text-sm transform transition hover:scale-105 hover:shadow-lg">
                        Back to Contacts
                    </a>
                </div>
            </div>
        </header>

        <!-- Contact Details -->
        <div class="max-w-7xl mx-auto px-4 py-6">
            <div class="bg-white rounded-xl shadow-sm overflow-hidden fade-in-up">
                <div class="p-8">
                    <div class="flex flex-col md:flex-row gap-8">
                        <!-- Contact Photo -->
                        <div class="flex-shrink-0">
                            {% if contact.photoFilename %}
                                <img src="{{ asset('uploads/photos/' ~ contact.photoFilename) }}"
                                     alt=""
                                     class="h-40 w-40 rounded-full object-cover ring-2 ring-green-100">
                            {% else %}
                                <div class="h-40 w-40 rounded-full bg-green-100 flex items-center justify-center
                                            ring-2 ring-green-200">
                                    <span class="text-2xl font-medium text-green-700">
                                        {{ contact.firstName|first }}{{ contact.lastName|first }}
                                    </span>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Contact Information -->
                        <div class="flex-1">
                            <h2 class="text-2xl font-bold text-green-800 mb-4">{{ contact.firstName }} {{ contact.lastName }}</h2>
                            <div class="space-y-4">
                                <div>
                                    <label class="text-sm font-medium text-green-700">Phone</label>
                                    <p class="text-gray-600">{{ contact.phone }}</p>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-green-700">Email</label>
                                    <p class="text-gray-600">{{ contact.email }}</p>
                                </div>
                                {% if contact.customFields|length > 0 %}
                                    <div>
                                        <label class="text-sm font-medium text-green-700">Custom Fields</label>
                                        <p class="text-gray-600">
                                            {% for field, value in contact.customFields %}
                                                {{ field }}: {{ value }}{% if not loop.last %} Â· {% endif %}
                                            {% endfor %}
                                        </p>
                                    </div>
                                {% endif %}
                                {% if contact.groups|length > 0 %}
                                    <div>
                                        <label class="text-sm font-medium text-green-700">Groups</label>
                                        <div class="flex gap-1.5 flex-wrap">
                                            {% for group in contact.groups %}
                                                <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded border border-green-400">
                                                    {{ group.name }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="mt-8 flex gap-4">
                        <a href="{{ path('app_contact_edit', {'id': contact.id}) }}"
                           class="inline-flex items-center px-4 py-2 border border-green-600
                                  text-green-600 rounded-lg text-sm font-medium
                                  hover:bg-green-50 transition-colors duration-200">
                            Edit
                        </a>
                        <form method="post"
                              action="{{ path('app_contact_delete', {'id': contact.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this contact?');"
                              class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                            <button class="inline-flex items-center px-4 py-2 bg-red-500 text-white
                                         rounded-lg text-sm font-medium hover:bg-red-600
                                         transition-colors duration-200">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}