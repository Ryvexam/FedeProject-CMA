{% extends 'base.html.twig' %}

{% block title %}Groups{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
        <div class="relative py-3 sm:max-w-xl sm:mx-auto">
            <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
                <div class="max-w-md mx-auto">
                    <div class="divide-y divide-gray-200">
                        <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                            <div class="flex justify-between items-center mb-8">
                                <h1 class="text-3xl font-bold text-gray-900">Groups</h1>
                                <a href="{{ path('app_group_new') }}" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700">
                                    New Group
                                </a>
                            </div>

                            {% for message in app.flashes('success') %}
                                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            <div class="grid grid-cols-1 gap-6">
                                {% for group in groups %}
                                    <div class="bg-white shadow rounded-lg p-6 hover:shadow-lg transition-shadow">
                                        <div class="flex justify-between items-center">
                                            <h2 class="text-xl font-semibold text-gray-900">{{ group.name }}</h2>
                                            <div class="flex space-x-2">
                                                <a href="{{ path('app_group_edit', {'id': group.id}) }}"
                                                   class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                                <a href="{{ path('app_group_show', {'id': group.id}) }}"
                                                   class="text-blue-600 hover:text-blue-900">View</a>
                                            </div>
                                        </div>
                                        <p class="text-gray-600 mt-2">
                                            {{ group.contacts|length }} contacts
                                        </p>
                                    </div>
                                {% else %}
                                    <div class="text-center text-gray-500">
                                        No groups found. Create your first group!
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}