{# templates/group/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit {{ group.name }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-green-50">
        <!-- Header with subtle gradient -->
        <header class="bg-gradient-to-r from-green-600 to-green-700 text-white">
            <div class="max-w-7xl mx-auto px-4 py-6 flex items-center justify-between">
                <h1 class="text-2xl font-medium">Edit {{ group.name }}</h1>
                <div class="flex items-center gap-4">
                    <a href="{{ path('app_group_show', {'id': group.id}) }}"
                       class="inline-flex items-center px-4 py-2 bg-white text-green-700 rounded-lg
                              font-medium text-sm transform transition hover:scale-105 hover:shadow-lg">
                        Back to Group
                    </a>
                </div>
            </div>
        </header>

        <!-- Form Section -->
        <div class="max-w-3xl mx-auto px-4 py-8">
            <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                <div class="p-6">
                    {{ form_start(form) }}
                    <div class="space-y-6">
                        <!-- Group Name Field -->
                        <div>
                            {{ form_label(form.name, null, {
                                'label_attr': {
                                    'class': 'block text-sm font-medium text-gray-700 mb-1'
                                }
                            }) }}
                            {{ form_widget(form.name, {
                                'attr': {
                                    'class': 'block w-full border border-green-200 rounded-lg py-2 px-3 text-sm
                                             focus:ring-2 focus:ring-green-500 focus:border-transparent
                                             transition-all duration-300'
                                }
                            }) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <!-- Contacts Selection -->
                        <div>
                            {{ form_label(form.contacts, null, {
                                'label_attr': {
                                    'class': 'block text-sm font-medium text-gray-700 mb-3'
                                }
                            }) }}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                {% for contact in form.contacts %}
                                    <div class="flex items-center space-x-3 p-3 rounded-lg border border-green-100 hover:bg-green-50 transition-colors duration-200">
                                        {{ form_widget(contact, {
                                            'attr': {
                                                'class': 'rounded border-green-300 text-green-600
                                                         focus:ring-green-500 cursor-pointer'
                                            }
                                        }) }}
                                        {{ form_label(contact, null, {
                                            'label_attr': {
                                                'class': 'text-sm text-gray-700 cursor-pointer'
                                            }
                                        }) }}
                                    </div>
                                {% endfor %}
                            </div>
                            {{ form_errors(form.contacts) }}
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex justify-end space-x-3 pt-6">
                            <a href="{{ path('app_group_show', {'id': group.id}) }}"
                               class="inline-flex items-center px-4 py-2 border border-green-600
                                      text-green-600 rounded-lg text-sm font-medium
                                      hover:bg-green-50 transition-colors duration-200">
                                Cancel
                            </a>
                            <button type="submit"
                                    class="inline-flex items-center px-4 py-2 bg-green-600 text-white
                                           rounded-lg text-sm font-medium hover:bg-green-700
                                           transition-colors duration-200">
                                Update Group
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}