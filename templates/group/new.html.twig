{% extends 'base.html.twig' %}

{% block title %}New Group{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
        <div class="relative py-3 sm:max-w-xl sm:mx-auto">
            <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
                <div class="max-w-md mx-auto">
                    <div class="mb-4">
                        <h1 class="text-2xl font-semibold text-gray-900">Create New Group</h1>
                    </div>

                    {{ form_start(form) }}
                    <div class="space-y-4">
                        {{ form_row(form.name) }}

                        <div class="space-y-2">
                            {{ form_label(form.contacts, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            <div class="mt-2 space-y-2">
                                {% for contact in form.contacts %}
                                    <div class="flex items-center">
                                        {{ form_widget(contact, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}}) }}
                                        {{ form_label(contact, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                                    </div>
                                {% endfor %}
                            </div>
                            {{ form_errors(form.contacts) }}
                        </div>

                        <div class="flex justify-end space-x-3 pt-4">
                            <a href="{{ path('app_group_index') }}"
                               class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Cancel
                            </a>
                            <button type="submit"
                                    class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Create
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}